<UserControl x:Class="Soda.PineappleBunsWin.Components.ShortCut"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Soda.PineappleBunsWin.Components"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="200" 
             MouseLeftButtonUp="ShortCut_OnMouseLeftButtonUp" 
             MouseLeftButtonDown="ShortCut_OnMouseLeftButtonDown"
             MouseDoubleClick="ShortCut_OnMouseDoubleClick">
    <Border x:Name="ShortCutBorder" Background="Transparent" CornerRadius="5"
            MouseLeave="ShortCut_OnMouseLeave" MouseEnter="ShortCut_OnMouseEnter">
        <StackPanel Background="Transparent"  Margin="5">
            <Image x:Name="ShortCutIcon" Width="64" Height="64"></Image>
            <TextBlock x:Name="ShortCutText" Text="未命名" HorizontalAlignment="Center" VerticalAlignment="Bottom" Foreground="White" FontSize="12" TextWrapping="Wrap" TextAlignment="Center"/>
        </StackPanel>
    </Border>
    
</UserControl>
